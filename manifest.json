{
  "manifest_version": 3,
  "name": "Anchor-bay",
  "description": "Extension to convert links in <pre> tag to html anchors",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-small.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}